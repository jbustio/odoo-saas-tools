<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<template id="theme" inherit_id="website.theme" name="saas portal assets">
			<xpath expr="//link[@href='/website/static/src/css/website.css']" position="before">
				<link rel='stylesheet' href='/saas_portal/static/src/css/odoo.css' t-ignore="true"/>
			</xpath>
		</template>

		<template id="assets_frontend" inherit_id="website.assets_frontend" name="saas portal assets">
			<xpath expr="." position="inside">
				<script type='text/javascript' src='/saas_portal/static/src/js/main.js'/>
			</xpath>
		</template>


		<template id="layout" inherit_id="website.layout" name="inherited main layout">
			<xpath expr="//main" position="after">
				<style type="text/css">
					#wrapwrap>footer{
					background-color: #34495e;
					}
				</style>
			</xpath>
		</template>

		<template id="website.start" name="Register" page="True" priority="29">
			<t t-call="website.layout">
				<div id="wrap" class="oe_structure oe_empty">
					<section class="odoo_secondary_A" style="background-image: url(/saas_portal/static/src/img/reserva_home.jpeg);">
						<div class="container">
							<div class="row">
								<div class="text-center mt64 mb92">
									<h2>Register and start trading today!</h2>
									
									<div class="odoo_call_action mt16">
										<div class="odoo_call_action_bg">
											<form role="form" class="form-inline">
												<div class="input-group">
													<input data-placement="bottom" name="odoo_db_name" data-trigger="manual" type="text" placeholder="your-company-name" class="form-control odoo_db_name" data-original-title="" title=""/>
														<span class="input-group-addon">.<t t-raw="base_saas_domain"/></span>
													</div>     
													<button type="submit" id="create_instance" class="btn btn-info">
														<strong>Start Trading</strong> 
													</button>           
												</form>
											</div>
											<p class="mt4 text-muted" id="cta_footer">Register your domain name to give your company a unique presence.
											</p>
										</div>

									</div>
								</div>
							</div>
						</section>

					</div>
				</t>
		</template>
		
		<template id="show_sign_in_or_sign_up" inherit_id="auth_signup.login" >
			<xpath expr="//a[@t-if='signup_enabled']" position="replace">
				<a t-if="signup_enabled" t-attf-href="/page/start" class="btn btn-link pull-right">Sign up</a>
			</xpath>
		</template>
		
		<template id="layout_footer_copyright" inherit_id="website.layout" name="iFooter Copyright">
	    	<xpath expr="//div[@class='pull-right']" position="replace">	
	    	</xpath>
		</template>
		
		<template id="menu_secondary" inherit_id="web.menu_secondary" name="inherit menu_secondary">
            <xpath expr="//div[@class='oe_footer']" position="replace">	
	    	</xpath>
        </template>
        
